{
    "version": 2,
    "builds": [
        { 
            "src": "api/*.go", 
            "use": "@vercel/go",
            "config": {
                "go_version": "1.21"
            }
        },
        { 
            "src": "public/**", 
            "use": "@vercel/static" 
        }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/api/$1" },
        { "src": "/(.*)", "dest": "/public/$1" }
    ]
} 